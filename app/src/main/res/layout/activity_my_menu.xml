<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/menuscreentwo"
    >

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="@drawable/start_game_image"
        android:layout_gravity="center_vertical"
        android:id="@+id/buttonStartGame"
        android:onClick="onStartGameButtonClick"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/buttonEndGame"
        android:layout_alignEnd="@+id/buttonEndGame" />
    <ImageButton
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:background="@drawable/exit_game_image"
        android:id="@+id/buttonEndGame"
        android:layout_gravity="bottom"
        android:onClick="onExitButtonClick"
        android:layout_above="@+id/buttonStartGame"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
